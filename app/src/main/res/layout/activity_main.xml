<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nextFocusLeft="@id/bfl_navbar" />

    <androidx.leanback.widget.BrowseFrameLayout
        android:id="@+id/bfl_navbar"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:nextFocusRight="@id/fl_container"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ll_side_menu"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="14dp"
            android:text="Search"
            android:gravity="center_vertical"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/ic_search"
            android:focusable="true"
            android:background="@drawable/selector_menu"
            />

            <TextView
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="Home"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_home"
                android:layout_height="45dp"
                android:background="@drawable/selector_menu"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_movies"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_movie"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:text="Movies"
                android:layout_height="45dp"
                android:focusable="true"
                android:background="@drawable/selector_menu"
                />

            <TextView
                android:id="@+id/btn_tv"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_tv"
                android:layout_marginLeft="14dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:text="TV"
                android:focusable="true"
                android:background="@drawable/selector_menu"
                />

            <TextView
                android:id="@+id/btn_sports"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_sports"
                android:layout_marginLeft="14dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:text="Sports"
                android:focusable="true"
                android:background="@drawable/selector_menu"
                />

            <TextView
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:drawableLeft="@drawable/ic_settings"
                android:layout_marginLeft="14dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:text="Settings"
                android:focusable="true"
                android:background="@drawable/selector_menu"
                />

            <TextView
                android:id="@+id/btn_language"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_language"
                android:layout_marginLeft="14dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:text="Language"
                android:focusable="true"
                android:background="@drawable/selector_menu"
                />

            <TextView
                android:id="@+id/btn_genre"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_genre"
                android:layout_marginLeft="14dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:drawablePadding="16dp"
                android:text="Genre"
                android:focusable="true"
                android:background="@drawable/selector_menu"
                />

        </LinearLayout>

    </androidx.leanback.widget.BrowseFrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>